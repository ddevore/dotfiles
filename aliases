# Navigation shortcuts.
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Listing shortcuts.
alias ll='ls -hl'
alias la='ls -al'

