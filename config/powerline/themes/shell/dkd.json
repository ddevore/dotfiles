{
  "default_module": "powerline.segments.common",
  "segment_data": {
    "hostname": {
      "before": " ",
      "args": {
        "only_if_ssh": false
      }
    },
    "virtualenv": {
      "before": "ⓔ  "
    },
    "branch": {
      "before": " ",
      "args": {
        "status_colors": true
      }
    },
    "cwd": {
      "args": {
        "use_path_separator": true,
        "dir_limit_depth": 3
      }
    },
    "user": {
      "before": "(",
      "after": ")$ ",
      "draw_hard_divider": false
    }
  },
  "segments": {
    "above": [
      {
        "left": [
        {
          "name": "hostname"
        },
        {
          "name": "virtualenv"
        },
        {
          "name": "cwd"
        },
        {
          "name": "branch"
        },
        {
          "module": "powerline.segments.shell",
          "name": "jobnum"
        },
        {
          "name": "last_status",
          "module": "powerline.segments.shell"
        }
        ]
      }
    ],
    "left": [
      {
        "name": "user"
      }
    ]
  }
}
